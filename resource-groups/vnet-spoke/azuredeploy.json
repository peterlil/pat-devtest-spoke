{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "dtap": {
      "type": "string",
      "allowedValues": [
        "production",
        "user acceptance test",
        "test",
        "development"
      ]
    },
    "ring": {
      "type": "int"
    },
    "location": {
      "type": "string"
    },
    "vnet-name": { 
      "type": "string"
    },
    "vnet-prefix": {
      "type": "string"
    },
    "admin-subnet-name": { 
      "type": "string" 
    },
    "workload1-subnet-name": { 
      "type": "string" 
    },
    "admin-subnet-prefix": { 
      "type": "string"
    },
    "workload1-subnet-prefix": { 
      "type": "string"
    }
  },
  "variables": {},
  "resources": [
    {
      "name": "[parameters('vnet-name')]",
      "type": "Microsoft.Network/virtualNetworks",
      "location": "[parameters('location')]",
      "apiVersion": "2018-11-01",
      "dependsOn": [ ],
      "tags": {
        "dtap": "[parameters('dtap')]"
      },
      "properties": {
        "addressSpace": {
          "addressPrefixes": [
            "[parameters('vnet-prefix')]"
          ]
        },
        "subnets": [
          {
            "name": "[parameters('admin-subnet-name')]",
            "properties": {
              "addressPrefix": "[parameters('admin-subnet-prefix')]"
            }
          },
          {
            "name": "[parameters('workload1-subnet-name')]",
            "properties": {
              "addressPrefix": "[parameters('workload1-subnet-prefix')]"
            }
          }
        ]
      }
    }],
  "outputs": {}
}
